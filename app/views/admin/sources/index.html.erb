<% content_for :title, "Media Sources" %>

<div style="display: grid; grid-template-columns: 1fr 350px; gap: 2rem;">
  <div>
    <div style="margin-bottom: 1rem; display: flex; align-items: center; justify-content: space-between;">
      <div style="color: var(--text-secondary); font-size: 0.875rem;">
        Currently tracking <span style="color: var(--text-primary); font-weight: 600;"><%= @total_movies %></span> movies across registered folders.
      </div>
    </div>
    <div style="background: var(--sidebar-bg); border-radius: 1rem; border: 1px solid #334155; overflow: hidden;">
      <table style="width: 100%; border-collapse: collapse; text-align: left;">
        <thead>
          <tr style="border-bottom: 2px solid #334155; background: rgba(51, 65, 85, 0.2);">
            <th style="padding: 1.25rem 1.5rem; font-weight: 600;">Media Folder Path</th>
            <th style="padding: 1.25rem 1.5rem; font-weight: 600; text-align: right;">Count</th>
            <th style="padding: 1.25rem 1.5rem; font-weight: 600; text-align: right;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @sources.each do |source| %>
            <% movie_count = Movie.where("path LIKE ?", "#{source.path}%").count %>
            <tr style="border-bottom: 1px solid #1e293b;">
              <td style="padding: 1rem 1.5rem; font-family: monospace; font-size: 0.875rem;">
                <%= source.path %>
              </td>
              <td style="padding: 1rem 1.5rem; text-align: right;">
                <span style="background: rgba(16, 185, 129, 0.1); color: #34d399; padding: 0.2rem 0.6rem; border-radius: 0.5rem; font-size: 0.8125rem; font-weight: 600;">
                  <%= movie_count %>
                </span>
              </td>
              <td style="padding: 1rem 1.5rem; text-align: right;">
                <%= link_to admin_source_path(source), data: { turbo_method: :delete, turbo_confirm: "Remove this source?" }, style: "color: #ef4444; font-size: 0.875rem; text-decoration: none;" do %>
                  <i class="fas fa-times-circle"></i> Remove
                <% end %>
              </td>
            </tr>
          <% end %>
          <% if @sources.empty? %>
            <tr>
              <td colspan="2" style="padding: 3rem; text-align: center; color: var(--text-secondary);">
                No media sources configured.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @generating_movies.any? %>
      <div style="margin-top: 3rem;">
        <h3 style="margin-bottom: 1.5rem; font-size: 1.25rem; display: flex; align-items: center; gap: 0.75rem;">
          <i class="fas fa-spinner fa-spin" style="color: var(--accent-color);"></i>
          Current Subtitle Tasks
        </h3>
        <div style="background: rgba(15, 23, 42, 0.5); border-radius: 1rem; border: 1px solid #334155; padding: 1rem;">
          <% @generating_movies.each do |movie| %>
            <div style="display: flex; align-items: center; justify-content: space-between; padding: 0.75rem; border-bottom: 1px solid #1e293b; last-child { border-bottom: none; }">
              <div style="display: flex; align-items: center; gap: 1rem;">
                <div style="width: 40px; height: 60px; background-size: cover; border-radius: 0.25rem; background-image: url('<%= movie.poster_path %>'); background-color: #1e293b;"></div>
                <div>
                  <div style="font-weight: 600; font-size: 0.9375rem;"><%= movie.title %></div>
                  <div style="font-size: 0.75rem; color: var(--text-secondary);"><%= File.basename(movie.path) %></div>
                </div>
              </div>
              <div style="font-size: 0.75rem; font-weight: 600; color: var(--accent-color); text-transform: uppercase; letter-spacing: 0.05em;">
                Transcribing...
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    <% if @generating_movie %>
      <div style="margin-top: 2rem;">
        <h3 style="margin-bottom: 1rem; font-size: 1.25rem; display: flex; align-items: center; gap: 0.5rem;">
          <i class="fas fa-play" style="color: var(--accent-color);"></i>
          Currently Processing Video
        </h3>
        <div style="background: rgba(15, 23, 42, 0.5); border-radius: 1rem; border: 1px solid #334155; padding: 1rem; display: flex; align-items: center; gap: 1rem;">
          <div style="width: 50px; height: 75px; background-size: cover; border-radius: 0.25rem; background-image: url('<%= @generating_movie.poster_path %>'); background-color: #1e293b;"></div>
          <div>
            <div style="font-weight: 600; font-size: 0.95rem;"><%= @generating_movie.title %></div>
            <div style="font-size: 0.75rem; color: var(--text-secondary);"><%= File.basename(@generating_movie.path) %></div>
          </div>
          <div style="margin-left:auto; font-size: 0.75rem; font-weight: 600; color: var(--accent-color); text-transform: uppercase; letter-spacing: 0.05em;">
            Transcribing...
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div>
    <div style="background: var(--sidebar-bg); padding: 1.5rem; border-radius: 1rem; border: 1px solid #334155; margin-bottom: 2rem;">
      <h3 style="margin-bottom: 1rem; font-size: 1.125rem;">Add New Source</h3>
      <%= form_with model: @new_source, url: admin_sources_path, local: true do |f| %>
        <div style="margin-bottom: 1.25rem;">
          <%= f.label :path, "Folder Path", style: "display: block; font-size: 0.75rem; color: var(--text-secondary); margin-bottom: 0.5rem;" %>
          <%= f.text_field :path, placeholder: "/mnt/diana/...", class: "auth-input", style: "width: 100%;" %>
        </div>
        <%= f.submit "Add Source", class: "download-btn", style: "width: 100%; justify-content: center;" %>
      <% end %>
    </div>

    <div style="background: #1e293b; padding: 1.5rem; border-radius: 1rem; border: 1px solid var(--accent-color); border-style: dashed;">
      <h3 style="margin-bottom: 0.5rem; font-size: 1.125rem;">Library Actions</h3>
      <p style="color: var(--text-secondary); font-size: 0.875rem; margin-bottom: 1.5rem;">Re-scan all sources and update the library with new movies and NFO data.</p>
      <%= button_to sync_admin_sources_path, method: :post, class: "download-btn", style: "width: 100%; justify-content: center; background: var(--accent-color); margin-bottom: 1rem;" do %>
        <i class="fas fa-sync-alt mr-2"></i> Sync Library Now
      <% end %>

      <%= button_to generate_subtitles_admin_sources_path, method: :post, class: "download-btn", style: "width: 100%; justify-content: center; background: #4f46e5;" do %>
        <i class="fas fa-magic mr-2"></i> Auto-gen Subtitles
      <% end %>
    </div>
  </div>
</div>
